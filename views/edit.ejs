<!DOCTYPE html>
<html>

<head>
  <title>Edit Project</title>
  <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0/dist/tailwind.min.js"></script>
  <!-- font awsom cdn -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>
  <div class="inset-0 bg-white bg-opacity-50 flex justify-center items-center">
    <div class="relative bg-white w-full max-w-lg mx-auto p-8">

      <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">Edit Project</h2>

      <!-- Form -->
      <form action="/projects/<%= project.id %>?_method=PUT" method="POST" class="space-y-5">
        <!-- Project Title -->
        <div class="relative">
          <label for="title" class="block text-gray-700 font-semibold mb-2">Project Title</label>
          <input type="text" id="title" name="title" value="<%= project.title %>" placeholder="Enter your project title"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 focus:outline-none transition">
          <i class="fas fa-project-diagram absolute top-3 right-3 text-gray-400"></i>
        </div>

        <!-- Project Description -->
        <div class="relative">
          <label for="description" class="block text-gray-700 font-semibold mb-2">Project Description</label>
          <textarea id="description" name="description" placeholder="Enter your project description" required
            class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 focus:outline-none transition h-32">
            <%= project.description %>
          </textarea>
          <i class="fas fa-align-left absolute top-3 right-3 text-gray-400"></i>
        </div>

        <!-- Project Status -->
        <div class="relative">
          <label for="status" class="block text-gray-700 font-semibold mb-2">Project Status</label>
          <select id="status" name="status"
            class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 focus:outline-none transition">
            <option value="Pending" <%= project.status === 'Pending' ? 'selected' : '' %>>Pending</option>
            <option value="In Progress" <%= project.status ==='In Progress' ? 'selected' : '' %>>In Progress</option>
            <option value="Completed" <%= project.status ==='Completed' ? 'selected' : '' %>>Completed</option>
          </select>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
          <button type="submit"
            class="w-full sm:w-auto px-8 py-3 bg-gradient-to-r from-yellow-400 to-yellow-500 text-white font-bold rounded-md shadow-lg hover:from-yellow-500 hover:to-yellow-600 focus:outline-none focus:ring-4 focus:ring-yellow-300 transition-all">
            Update Project
          </button>
        </div>
      </form>
    </div>
  </div>
</body>

</html>